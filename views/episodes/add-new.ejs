<%- include('../header'); -%>
<%- include('../navbar'); -%>
<div class="container">
    <h1>Add New Episode</h1>
    <% if (flash && flash.errors && flash.errors.length > 0) { %>
        <% for (let error of flash.errors) {%>   
    <div class="alert alert-danger"><%= error %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
        <% } %>
    <% } %>
    <% if (flash && flash.notice && flash.notice.length > 0) { %>
    <div class="alert alert-success"><%= flash.notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>
    <form method="POST">
        <input type="hidden" name="_csrf" value="<%= csrf_token %>">
        <div class="form-group">
            <label class="control-label" for="post_title">Parent Post</label>
            <select class="form-control" id="parent_post" name="postId" title="" >               
                <option value="">[Select a category]</option>
                <% for(let post of posts) {%>
                <option value="<%= post._id%>"><%= post.post_title%></option>
                <% } %>
            </select>
        </div>
        <div class="row">
            <div class="form-group col-4">
                    <label class="control-label" for="epNum">Episode Number</label>
                    <input class="form-control" id="epNum" name="epNum" placeholder="Episode Number..." title="" type="text" value="">
            </div>
            <div class="form-group col-8">
                <label class="control-label" for="link_download">Link Download (Drive)</label>
                <input class="form-control" id="link_download" name="link_download" placeholder="Link Download..." title="" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Add New" class="btn btn-primary">
        </div>
    </form>
</div>


<%- include('../footer'); -%>